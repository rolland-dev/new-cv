<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <META NAME="TITLE" CONTENT="rolland-dev">
            <META NAME="AUTHOR" CONTENT="RLDeveloppement">
            <META NAME="DESCRIPTION" CONTENT="developpeur de site internet">
            <META NAME="KEYWORDS" CONTENT="site internet, application web, e-commerce, vitrine, aisne, sur mesure, mobile">
            <META NAME="OWNER" CONTENT="Didier Rolland">
            <META NAME="ROBOTS" CONTENT="index,all">
            <META NAME="Reply-to" CONTENT="didier@rolland-dev.fr">
            <META NAME="REVISIT-AFTER" CONTENT="15">
                
        {% block stylesheets %}

            <link rel="stylesheet" href="/public/css/style.css" >

        {% endblock %}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    </head>
    <body style="background-image: url('/images/network.jpg'); background-repeat: no-repeat; background-size: cover; ">

        <nav class="navbar navbar-expand-lg navbar-light bg-light" >
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Rolland-dev</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('accueil') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('presentation') }}">Présentation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="{{ path('competences') }}">Compétences</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('formations') }}">Formations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="{{ path('projet') }}">Projet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>

                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('security_login') }}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('security_inscription') }}">Inscription</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('security_logout') }}">Déconnexion</a>
                            </li>
                        {% endif %}
                    </ul>
                    {% if app.user %}
                            <a class="nav-link" href="#"><font style = "Color: #928d41">Bonjour et bienvenu {{ app.user.username }}</font> </a>
                    {% else %}
                            <a class="nav-link" href="#"><font style = "Color: #928d41">Bonjour et bienvenu </font> </a>
                    {% endif %}
                </div>
            </div>
        </nav>
        
        {% for message in app.flashes('message') %}
            <div class="jumbotron flash-info" style="text-align: center; color:blanchedalmond; background-color:blue ">
                <h3>{{ message }}</h3>
            </div>
        {% endfor %}

            {% block body %}
                <div class="container fond">

                </div>
            {% endblock %}
        {% block javascripts %}

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

        {% endblock %}
    </body>
</html>
